@model List<EmlakTakip.Models.Kullanicilar>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<h4 class="mb-4">Kullanıcı Yönetimi</h4>



<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            <th>Kayıt Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kullanici in Model)
        {
            <tr>
                <td>@kullanici.Id</td>
                <td>@kullanici.AdSoyad</td>
                <td>@kullanici.KullaniciAdi</td>
                <td>@kullanici.Email</td>
                <td>@kullanici.KayitTarihi.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-controller="Home" asp-action="KullaniciDuzenle" asp-route-id="@kullanici.Id"
                        class="btn btn-sm btn-primary">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    <form asp-action="Sil" asp-route-id="@kullanici.Id" method="post"
                        onsubmit="return confirm('Silinsin mi?');" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger p-0 border-0">
                            <i class="fa-solid fa-trash px-2 py-1"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
