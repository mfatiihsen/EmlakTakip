@model EmlakTakip.ViewModel.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Giriş";
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #3a8dff, #0072ff);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            width: 100%;
            max-width: 400px;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            background: white;
        }
    </style>
</head>

<body>
    <div class="login-card">
        <h4 class="text-center mb-4">Admin Panel Girişi</h4>

        @* Hata mesajlarını göster *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }

        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="mb-3">
                <label asp-for="KullaniciAdi" class="form-label"></label>
                <input asp-for="KullaniciAdi" class="form-control" placeholder="admin" />
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sifre" class="form-label"></label>
                <input asp-for="Sifre" type="password" class="form-control" placeholder="••••••••" />
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="fa-solid fa-right-to-bracket me-1"></i> Giriş Yap
            </button>
        </form>
    </div>

    @* Client-side doğrulama için gerekli *@
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.13/dist/jquery.validate.unobtrusive.min.js"></script>
</body>

</html>
