@using EmlakTakip.ViewModel
@model SifreDegistirModel

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<h4 class="mb-4">Şifre Değiştir</h4>

<form method="post" asp-action="SifreDegistir">
    @Html.AntiForgeryToken()
    
    <div class="mb-3">
        <label class="form-label" asp-for="MevcutSifre"></label>
        <input type="password" class="form-control" asp-for="MevcutSifre" placeholder="•••••••" />
        <span asp-validation-for="MevcutSifre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="YeniSifre"></label>
        <input type="password" class="form-control" asp-for="YeniSifre" placeholder="Yeni şifrenizi girin" />
        <span asp-validation-for="YeniSifre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="YeniSifreTekrar"></label>
        <input type="password" class="form-control" asp-for="YeniSifreTekrar" placeholder="Yeniden girin" />
        <span asp-validation-for="YeniSifreTekrar" class="text-danger"></span>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <button type="submit" class="btn btn-warning">
        <i class="fa-solid fa-key me-1"></i> Şifreyi Güncelle
    </button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}