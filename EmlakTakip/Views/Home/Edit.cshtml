@{
    ViewData["Title"] = "Emlak Düzenle";
}

<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Emlak Düzenle</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="Baslik" class="form-label">Başlık</label>
                    <input type="text" class="form-control" id="Baslik" value="Deniz Manzaralı 2+1 Daire">
                </div>
                <div class="col-md-6">
                    <label for="Tip" class="form-label">Tip</label>
                    <select id="Tip" class="form-select">
                        <option>Satılık</option>
                        <option selected>Kiralık</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="Fiyat" class="form-label">Fiyat (₺)</label>
                    <input type="number" class="form-control" id="Fiyat" value="2500000">
                </div>
                <div class="col-md-6">
                    <label for="Konum" class="form-label">Konum</label>
                    <input type="text" class="form-control" id="Konum" value="İstanbul / Kadıköy">
                </div>
                <div class="col-12">
                    <label for="Aciklama" class="form-label">Açıklama</label>
                    <textarea class="form-control" id="Aciklama"
                        rows="4">Muhteşem deniz manzaralı daire. Merkezi konumda.</textarea>
                </div>
                <div class="col-12">
                    <label for="Gorsel" class="form-label">Görseli Değiştir</label>
                    <input class="form-control" type="file" id="Gorsel">
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a href="/Emlak/Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left me-1"></i> Vazgeç
                </a>
                <button type="submit" class="btn btn-warning">
                    <i class="fa-solid fa-save me-1"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>
