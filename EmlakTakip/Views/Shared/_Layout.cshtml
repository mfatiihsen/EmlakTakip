@{
    var kullaniciAdi = Context.Session.GetString("AdminKullaniciAdi") ?? "Ziyaretçi";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmlakTakip.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">


</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 py-2 shadow-sm">
        <div class="container-fluid d-flex justify-between align-items-center">
            <div class="text-white">
                Hoşgeldiniz, <strong>@kullaniciAdi</strong>
            </div>

            <form asp-controller="Account" asp-action="Logout" method="post" class="ms-auto d-inline">
                <button type="submit" class="btn btn-sm btn-danger">
                    <i class="fa-solid fa-right-from-bracket me-1"></i> Oturumu Kapat
                </button>
            </form>
        </div>
    </nav>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white p-3" style="min-height: 100vh; width: 250px;">
            <h4 class="text-white mb-4 text-center">Emlak Takip</h4>

            <ul class="nav flex-column">

                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-white">
                        <i class="fa-solid fa-house me-2"></i> Ana Sayfa
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="EmlakListeleme" class="nav-link text-white">
                        <i class="fa-solid fa-building me-2"></i> Emlaklar
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="Create" class="nav-link text-white">
                        <i class="fa-solid fa-circle-plus me-2"></i> Emlak Ekle
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="KullaniciEkle" class="nav-link text-white">
                        <i class="fa-solid fa-user-plus me-2"></i> Kullanıcı Ekle
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="Kullanicilar" class="nav-link text-white">
                        <i class="fa-solid fa-user-gear me-2"></i> Kullanıcılar
                    </a>
                </li>

                <li class="nav-item mb-2">
                    <a asp-controller="Home" asp-action="SifreDegistir" class="nav-link text-white">
                        <i class="fa-solid fa-key me-2"></i> Şifre Değiştir
                    </a>
                </li>

            </ul>
        </div>

        <!-- Main -->
        <main class="flex-fill p-4 w-100 overflow-auto" style="background-color: #f8f9fa;">
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    @RenderSection("Scripts", required: false);
</body>


</html>
